{
  "name": "ai-book-root",
  "version": "1.0.0",
  "description": "AI Book Project - Frontend and Backend Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/nodejs"
  ],
  "scripts": {
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "frontend:dev": "cd frontend && npm run start",
    "backend:dev": "cd backend/nodejs && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend/nodejs && npm run build",
    "deploy": "npm run frontend:build"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "ai",
    "robotics",
    "textbook",
    "docusaurus",
    "education"
  ],
  "author": "AI Robotics Textbook Project",
  "license": "MIT"
}